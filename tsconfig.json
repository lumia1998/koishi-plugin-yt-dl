{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "lib",
    "target": "es2020",
    "module": "commonjs",
    "declaration": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "strict": true,
    "useUnknownInCatchVariables": false,
    "types": [
      "node"
    ]
  },
  "include": [
    "src"
  ]
}